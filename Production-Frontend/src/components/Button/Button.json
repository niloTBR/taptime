{
  "componentName": "Button",
  "description": "A versatile button component with multiple variants and sizes",
  "variants": {
    "primary": {
      "name": "Primary",
      "description": "Main action button with black background",
      "class": "btn--primary",
      "defaultColors": {
        "background": "#000000",
        "color": "#ffffff",
        "hoverBackground": "#374151"
      }
    },
    "outline": {
      "name": "Outline",
      "description": "Secondary button with black border",
      "class": "btn--outline", 
      "defaultColors": {
        "background": "#ffffff",
        "color": "#000000",
        "border": "#000000",
        "hoverBackground": "#000000",
        "hoverColor": "#ffffff"
      }
    },
    "ghost": {
      "name": "Ghost",
      "description": "Minimal button with no background",
      "class": "btn--ghost",
      "defaultColors": {
        "background": "transparent",
        "color": "#6b7280",
        "hoverBackground": "#f3f4f6",
        "hoverColor": "#000000"
      }
    },
    "secondary": {
      "name": "Secondary",
      "description": "Alternative button with gray background",
      "class": "btn--secondary",
      "defaultColors": {
        "background": "#f3f4f6",
        "color": "#000000",
        "hoverBackground": "#e5e7eb"
      }
    },
    "destructive": {
      "name": "Destructive",
      "description": "For dangerous or delete actions",
      "class": "btn--destructive",
      "defaultColors": {
        "background": "#dc2626",
        "color": "#ffffff",
        "hoverBackground": "#b91c1c"
      }
    }
  },
  "sizes": {
    "small": {
      "name": "Small",
      "description": "Compact button for tight spaces",
      "class": "btn--small",
      "dimensions": {
        "padding": "0.375rem 0.75rem",
        "fontSize": "0.875rem",
        "height": "2rem"
      }
    },
    "medium": {
      "name": "Medium", 
      "description": "Standard button size",
      "class": "btn--medium",
      "dimensions": {
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem", 
        "height": "2.5rem"
      },
      "default": true
    },
    "large": {
      "name": "Large",
      "description": "Prominent button for main actions",
      "class": "btn--large",
      "dimensions": {
        "padding": "0.75rem 2rem",
        "fontSize": "1rem",
        "height": "3rem"
      }
    }
  },
  "states": {
    "default": {
      "name": "Default",
      "description": "Normal interactive state"
    },
    "hover": {
      "name": "Hover",
      "description": "When user hovers over button"
    },
    "active": {
      "name": "Active", 
      "description": "When button is being pressed"
    },
    "focus": {
      "name": "Focus",
      "description": "When button has keyboard focus",
      "outline": "2px solid black",
      "outlineOffset": "2px"
    },
    "disabled": {
      "name": "Disabled",
      "description": "When button cannot be interacted with",
      "opacity": "0.5",
      "cursor": "not-allowed"
    },
    "loading": {
      "name": "Loading",
      "description": "When button is processing an action",
      "cursor": "default",
      "animation": "spin"
    }
  },
  "modifiers": {
    "fullWidth": {
      "name": "Full Width",
      "description": "Button takes full width of container",
      "class": "btn--full",
      "width": "100%"
    },
    "withIcon": {
      "name": "With Icon",
      "description": "Button includes an icon",
      "iconPositions": ["left", "right"]
    },
    "inGroup": {
      "name": "Button Group",
      "description": "Button is part of a group",
      "class": "btn-group",
      "borderRadius": "0 for middle buttons"
    }
  },
  "accessibility": {
    "aria": {
      "label": "Descriptive label for screen readers",
      "disabled": "true when button is disabled",
      "pressed": "true/false for toggle buttons"
    },
    "keyboard": {
      "enter": "Activates button",
      "space": "Activates button", 
      "tab": "Moves focus to button"
    },
    "focusVisible": {
      "outline": "2px solid black",
      "outlineOffset": "2px"
    }
  },
  "rtlSupport": {
    "enabled": true,
    "description": "Button supports right-to-left languages",
    "iconFlipping": "Icons automatically flip direction in RTL",
    "marginLogical": "Uses logical margin properties (margin-inline-start/end)"
  },
  "usage": {
    "examples": [
      {
        "name": "Primary Action",
        "variant": "primary",
        "size": "large",
        "text": "Get Started",
        "usage": "Main call-to-action on pages"
      },
      {
        "name": "Secondary Action", 
        "variant": "outline",
        "size": "medium",
        "text": "Learn More",
        "usage": "Secondary actions alongside primary"
      },
      {
        "name": "Subtle Action",
        "variant": "ghost", 
        "size": "small",
        "text": "Cancel",
        "usage": "Minimal actions like cancel or dismiss"
      },
      {
        "name": "With Icon",
        "variant": "primary",
        "size": "medium", 
        "icon": "download",
        "text": "Download",
        "usage": "Actions that benefit from visual icons"
      },
      {
        "name": "Loading State",
        "variant": "primary",
        "size": "medium",
        "text": "Please wait...",
        "loading": true,
        "usage": "During async operations"
      }
    ]
  },
  "implementation": {
    "files": {
      "html": "./Button.html",
      "scss": "./Button.scss", 
      "typescript": "./Button.ts",
      "config": "./Button.json"
    },
    "dependencies": [],
    "browserSupport": "Modern browsers (ES6+)",
    "dataAttributes": {
      "data-button": "Initializes button component",
      "data-variant": "Sets button variant",
      "data-size": "Sets button size",
      "data-text": "Sets button text",
      "data-disabled": "Sets disabled state",
      "data-loading": "Sets loading state",
      "data-full-width": "Makes button full width",
      "data-icon": "Sets left icon",
      "data-right-icon": "Sets right icon",
      "data-on-click": "Function name to call on click"
    }
  }
}